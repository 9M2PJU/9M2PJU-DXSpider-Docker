<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="DXSpider Web Dashboard - Real-time DX Cluster monitoring">
    <title><%= $cluster_callsign %> - DXSpider Dashboard</title>

    <!-- Tailwind CSS from CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'ham-dark': '#0f1419',
                        'ham-darker': '#0a0e13',
                        'ham-accent': '#00d4ff',
                        'ham-accent-dim': '#0099cc',
                    }
                }
            }
        }
    </script>

    <!-- Alpine.js 3.x from CDN -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- HTMX 1.9.x from CDN -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>

    <!-- Chart.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- Custom styles -->
    <style>
        body {
            background: linear-gradient(135deg, #0a0e13 0%, #1a1f2e 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .callsign {
            font-family: 'Courier New', monospace;
            font-weight: bold;
            letter-spacing: 0.05em;
        }

        .spot-row:hover {
            background-color: rgba(0, 212, 255, 0.1);
        }

        .band-btn {
            transition: all 0.2s ease;
        }

        .band-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
        }

        .band-btn.active {
            background: linear-gradient(135deg, #00d4ff 0%, #0099cc 100%);
            color: white;
        }

        .pulse-dot {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0a0e13;
        }

        ::-webkit-scrollbar-thumb {
            background: #00d4ff;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #0099cc;
        }
    </style>
</head>

<body class="text-gray-200 min-h-screen" x-data="dashboard()">
    <!-- Header -->
    <header class="bg-ham-darker border-b border-ham-accent shadow-lg">
        <div class="container mx-auto px-4 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-ham-accent to-ham-accent-dim rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold callsign text-ham-accent"><%= $cluster_callsign %></h1>
                        <p class="text-sm text-gray-400"><%= $cluster_qth %> <span x-show="stats.cluster_locator">• <%= $cluster_locator %></span></p>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-3 gap-4 text-center">
                    <div class="bg-ham-dark rounded-lg px-4 py-2 border border-gray-700">
                        <div class="text-2xl font-bold text-ham-accent" x-text="stats.connected_users || 0">0</div>
                        <div class="text-xs text-gray-400">Users</div>
                    </div>
                    <div class="bg-ham-dark rounded-lg px-4 py-2 border border-gray-700">
                        <div class="text-2xl font-bold text-ham-accent" x-text="stats.connected_nodes || 0">0</div>
                        <div class="text-xs text-gray-400">Nodes</div>
                    </div>
                    <div class="bg-ham-dark rounded-lg px-4 py-2 border border-gray-700">
                        <div class="text-2xl font-bold text-ham-accent" x-text="stats.spots_last_hour || 0">0</div>
                        <div class="text-xs text-gray-400">Spots/Hr</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <!-- Left Column: Filters & Info -->
            <div class="lg:col-span-1 space-y-4">
                <!-- Search -->
                <div class="bg-ham-dark rounded-lg p-4 border border-gray-700">
                    <h2 class="text-lg font-semibold mb-3 text-ham-accent">Search</h2>
                    <input
                        type="text"
                        x-model="searchTerm"
                        @input.debounce.500ms="loadSpots()"
                        placeholder="Callsign, spotter..."
                        class="w-full px-3 py-2 bg-ham-darker border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-ham-accent"
                        aria-label="Search spots"
                    >
                </div>

                <!-- Band Filter -->
                <div class="bg-ham-dark rounded-lg p-4 border border-gray-700">
                    <h2 class="text-lg font-semibold mb-3 text-ham-accent">Bands</h2>
                    <div class="grid grid-cols-2 gap-2">
                        <button
                            @click="selectedBand = ''; loadSpots()"
                            :class="selectedBand === '' ? 'active' : 'bg-gray-700 hover:bg-gray-600'"
                            class="band-btn px-3 py-2 rounded-lg text-sm font-medium"
                        >
                            All
                        </button>
                        <template x-for="band in bands" :key="band">
                            <button
                                @click="selectedBand = band; loadSpots()"
                                :class="selectedBand === band ? 'active' : 'bg-gray-700 hover:bg-gray-600'"
                                class="band-btn px-3 py-2 rounded-lg text-sm font-medium"
                                x-text="band"
                            ></button>
                        </template>
                    </div>
                </div>

                <!-- Connected Nodes -->
                <div class="bg-ham-dark rounded-lg p-4 border border-gray-700">
                    <h2 class="text-lg font-semibold mb-3 text-ham-accent flex items-center gap-2">
                        <span class="pulse-dot w-2 h-2 bg-green-500 rounded-full"></span>
                        Nodes
                    </h2>
                    <div class="space-y-2 max-h-48 overflow-y-auto">
                        <template x-for="node in nodes" :key="node.callsign">
                            <div class="flex justify-between items-center text-sm">
                                <span class="callsign text-gray-300" x-text="node.callsign"></span>
                                <span class="text-xs text-gray-500" x-text="node.sort || 'Node'"></span>
                            </div>
                        </template>
                        <div x-show="nodes.length === 0" class="text-sm text-gray-500 text-center py-2">
                            No nodes connected
                        </div>
                    </div>
                </div>

                <!-- Chart -->
                <div class="bg-ham-dark rounded-lg p-4 border border-gray-700">
                    <h2 class="text-lg font-semibold mb-3 text-ham-accent">Spots/Hour</h2>
                    <canvas id="spotsChart" class="w-full" height="150"></canvas>
                </div>
            </div>

            <!-- Right Column: Spot Feed -->
            <div class="lg:col-span-3">
                <div class="bg-ham-dark rounded-lg border border-gray-700 overflow-hidden">
                    <!-- Header -->
                    <div class="bg-ham-darker border-b border-gray-700 px-4 py-3 flex justify-between items-center">
                        <h2 class="text-lg font-semibold text-ham-accent flex items-center gap-2">
                            <span class="pulse-dot w-2 h-2 bg-green-500 rounded-full"></span>
                            Live DX Spots
                        </h2>
                        <div class="flex items-center gap-2">
                            <button
                                @click="autoRefresh = !autoRefresh"
                                :class="autoRefresh ? 'bg-green-600 hover:bg-green-700' : 'bg-gray-600 hover:bg-gray-500'"
                                class="px-3 py-1 rounded text-xs font-medium transition-colors"
                                x-text="autoRefresh ? 'Auto-Refresh ON' : 'Auto-Refresh OFF'"
                            ></button>
                            <button
                                @click="loadSpots()"
                                class="px-3 py-1 bg-ham-accent hover:bg-ham-accent-dim rounded text-xs font-medium transition-colors"
                            >
                                Refresh
                            </button>
                        </div>
                    </div>

                    <!-- Spot Table -->
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-ham-darker border-b border-gray-700 text-xs uppercase text-gray-400">
                                <tr>
                                    <th class="px-4 py-3 text-left">Time</th>
                                    <th class="px-4 py-3 text-left">Frequency</th>
                                    <th class="px-4 py-3 text-left">DX Callsign</th>
                                    <th class="px-4 py-3 text-left">Spotter</th>
                                    <th class="px-4 py-3 text-left">Comment</th>
                                    <th class="px-4 py-3 text-left">Band</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-800">
                                <template x-for="spot in spots" :key="spot.timestamp + spot.callsign">
                                    <tr class="spot-row transition-colors fade-in">
                                        <td class="px-4 py-3 text-sm text-gray-400" x-text="spot.formatted_time"></td>
                                        <td class="px-4 py-3 text-sm font-mono text-ham-accent" x-text="spot.formatted_freq"></td>
                                        <td class="px-4 py-3 callsign text-white font-semibold" x-text="spot.callsign"></td>
                                        <td class="px-4 py-3 callsign text-sm text-gray-300" x-text="spot.spotter"></td>
                                        <td class="px-4 py-3 text-sm text-gray-400" x-text="spot.comment"></td>
                                        <td class="px-4 py-3">
                                            <span class="px-2 py-1 bg-gray-700 rounded text-xs font-medium" x-text="spot.band"></span>
                                        </td>
                                    </tr>
                                </template>
                            </tbody>
                        </table>

                        <!-- Loading State -->
                        <div x-show="loading" class="text-center py-8">
                            <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-ham-accent border-t-transparent"></div>
                            <p class="mt-2 text-gray-400">Loading spots...</p>
                        </div>

                        <!-- Empty State -->
                        <div x-show="!loading && spots.length === 0" class="text-center py-8">
                            <svg class="mx-auto h-12 w-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                            </svg>
                            <p class="mt-2 text-gray-400">No spots found</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="container mx-auto px-4 py-6 mt-6 border-t border-gray-800 text-center text-sm text-gray-500">
        <p>DXSpider Dashboard &copy; 2025 • Powered by Mojolicious, Alpine.js, HTMX, Tailwind CSS</p>
        <p class="mt-1">
            <span x-show="stats.cluster_callsign" x-text="stats.cluster_callsign"></span> •
            Uptime: <span x-text="formatUptime(stats.uptime_seconds)">--</span>
        </p>
    </footer>

    <!-- Alpine.js Application -->
    <script>
        function dashboard() {
            return {
                spots: [],
                nodes: [],
                users: [],
                stats: {},
                loading: false,
                autoRefresh: true,
                refreshInterval: null,
                searchTerm: '',
                selectedBand: '',
                bands: ['160m', '80m', '40m', '30m', '20m', '17m', '15m', '12m', '10m', '6m', '2m', '70cm'],
                spotsChart: null,

                init() {
                    this.loadAll();
                    this.setupAutoRefresh();
                    this.initChart();
                },

                setupAutoRefresh() {
                    this.refreshInterval = setInterval(() => {
                        if (this.autoRefresh) {
                            this.loadAll();
                        }
                    }, 5000);
                },

                async loadAll() {
                    await Promise.all([
                        this.loadSpots(),
                        this.loadNodes(),
                        this.loadUsers(),
                        this.loadStats()
                    ]);
                },

                async loadSpots() {
                    this.loading = true;
                    try {
                        const params = new URLSearchParams({
                            limit: 50,
                            band: this.selectedBand,
                            search: this.searchTerm
                        });

                        const response = await fetch(`/api/spots?${params}`);
                        const data = await response.json();

                        if (data.success) {
                            this.spots = data.spots;
                        }
                    } catch (error) {
                        console.error('Error loading spots:', error);
                    } finally {
                        this.loading = false;
                    }
                },

                async loadNodes() {
                    try {
                        const response = await fetch('/api/nodes');
                        const data = await response.json();

                        if (data.success) {
                            this.nodes = data.nodes;
                        }
                    } catch (error) {
                        console.error('Error loading nodes:', error);
                    }
                },

                async loadUsers() {
                    try {
                        const response = await fetch('/api/users');
                        const data = await response.json();

                        if (data.success) {
                            this.users = data.users;
                        }
                    } catch (error) {
                        console.error('Error loading users:', error);
                    }
                },

                async loadStats() {
                    try {
                        const response = await fetch('/api/stats');
                        const data = await response.json();

                        if (data.success) {
                            this.stats = data.stats;
                            this.updateChart();
                        }
                    } catch (error) {
                        console.error('Error loading stats:', error);
                    }
                },

                initChart() {
                    const ctx = document.getElementById('spotsChart');
                    if (!ctx) return;

                    this.spotsChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: [],
                            datasets: [{
                                label: 'Spots',
                                data: [],
                                backgroundColor: 'rgba(0, 212, 255, 0.5)',
                                borderColor: 'rgba(0, 212, 255, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        color: '#9ca3af'
                                    },
                                    grid: {
                                        color: 'rgba(75, 85, 99, 0.2)'
                                    }
                                },
                                x: {
                                    ticks: {
                                        color: '#9ca3af'
                                    },
                                    grid: {
                                        color: 'rgba(75, 85, 99, 0.2)'
                                    }
                                }
                            }
                        }
                    });
                },

                updateChart() {
                    if (!this.spotsChart || !this.stats.band_distribution) return;

                    const bands = Object.keys(this.stats.band_distribution).sort();
                    const counts = bands.map(band => this.stats.band_distribution[band]);

                    this.spotsChart.data.labels = bands;
                    this.spotsChart.data.datasets[0].data = counts;
                    this.spotsChart.update();
                },

                formatUptime(seconds) {
                    if (!seconds) return '--';

                    const days = Math.floor(seconds / 86400);
                    const hours = Math.floor((seconds % 86400) / 3600);
                    const minutes = Math.floor((seconds % 3600) / 60);

                    if (days > 0) {
                        return `${days}d ${hours}h`;
                    } else if (hours > 0) {
                        return `${hours}h ${minutes}m`;
                    } else {
                        return `${minutes}m`;
                    }
                }
            }
        }
    </script>
</body>
</html>
