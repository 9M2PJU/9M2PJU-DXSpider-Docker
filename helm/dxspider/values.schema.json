{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DXSpider Helm Chart Values",
  "description": "Configuration values for DXSpider Helm chart",
  "required": [
    "cluster",
    "sysop"
  ],
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "DXSpider image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy"
        },
        "tag": {
          "type": "string",
          "description": "Image tag"
        }
      }
    },
    "cluster": {
      "type": "object",
      "required": ["callsign", "location"],
      "properties": {
        "callsign": {
          "type": "string",
          "pattern": "^[A-Z0-9]+-[0-9]+$",
          "description": "Node callsign with SSID (e.g., 9M2PJU-10)"
        },
        "branch": {
          "type": "string",
          "enum": ["mojo", "master"],
          "description": "DXSpider git branch"
        },
        "location": {
          "type": "object",
          "required": ["locator", "qth"],
          "properties": {
            "latitude": {
              "type": "string",
              "pattern": "^[+-][0-9]+\\.?[0-9]*$",
              "description": "Latitude in decimal degrees"
            },
            "longitude": {
              "type": "string",
              "pattern": "^[+-][0-9]+\\.?[0-9]*$",
              "description": "Longitude in decimal degrees"
            },
            "locator": {
              "type": "string",
              "pattern": "^[A-Z]{2}[0-9]{2}[A-Z]{2}$",
              "description": "Maidenhead grid locator (6 characters)"
            },
            "qth": {
              "type": "string",
              "minLength": 1,
              "description": "QTH location description"
            }
          }
        },
        "network": {
          "type": "object",
          "properties": {
            "hostname": {
              "type": "string",
              "description": "Hostname for this node"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Telnet port"
            },
            "sysopPort": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Web console port"
            },
            "metricsPort": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Metrics port"
            }
          }
        }
      }
    },
    "sysop": {
      "type": "object",
      "required": ["callsign", "email"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Sysop name"
        },
        "callsign": {
          "type": "string",
          "pattern": "^[A-Z0-9]+$",
          "description": "Sysop callsign"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Sysop email address"
        },
        "bbs_address": {
          "type": "string",
          "description": "BBS address"
        },
        "password": {
          "type": "string",
          "description": "Sysop password"
        }
      }
    },
    "database": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable database support"
        },
        "type": {
          "type": "string",
          "enum": ["mysql", "postgresql"],
          "description": "Database type"
        },
        "hostname": {
          "type": "string",
          "description": "Database hostname"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Database port"
        },
        "name": {
          "type": "string",
          "description": "Database name"
        },
        "user": {
          "type": "string",
          "description": "Database user"
        },
        "password": {
          "type": "string",
          "description": "Database password"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$"
            }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable persistent storage"
        },
        "existingClaim": {
          "type": "string",
          "description": "Use existing PVC"
        },
        "storageClass": {
          "type": "string",
          "description": "Storage class name"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"],
          "description": "Access mode"
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(Mi|Gi|Ti)$",
          "description": "Storage size"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Service type"
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress"
        },
        "className": {
          "type": "string",
          "description": "Ingress class name"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "description": "Hostname"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string",
                      "enum": ["Prefix", "Exact", "ImplementationSpecific"]
                    },
                    "service": {
                      "type": "string",
                      "enum": ["telnet", "console", "metrics"]
                    }
                  }
                }
              }
            }
          }
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretName": {
                "type": "string"
              },
              "hosts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable metrics"
        },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Create ServiceMonitor"
            },
            "interval": {
              "type": "string",
              "pattern": "^[0-9]+[smh]$",
              "description": "Scrape interval"
            },
            "scrapeTimeout": {
              "type": "string",
              "pattern": "^[0-9]+[smh]$",
              "description": "Scrape timeout"
            }
          }
        }
      }
    }
  }
}
